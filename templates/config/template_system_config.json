{
  "system_info": {
    "name": "Comic Script Template System",
    "version": "1.0.0",
    "style": "Alt Shift X Analysis Format",
    "target_duration": "20-25 minutes",
    "created": "2024-12-17",
    "purpose": "Automated comic character script generation with research guidance"
  },
  "template_structure": {
    "main_template": "script_template_comics.md",
    "sections_directory": "sections/",
    "mapping_directory": "mapping/",
    "config_directory": "config/"
  },
  "sections": {
    "opening": {
      "file": "opening_template.md",
      "duration": 15,
      "start_time": "00:00:01",
      "end_time": "00:00:15",
      "purpose": "Hook viewer with sponsorship and thesis"
    },
    "origin_context": {
      "file": "origin_context_template.md",
      "duration": 90,
      "start_time": "00:00:16",
      "end_time": "00:01:45",
      "purpose": "Establish character creation and initial concept"
    },
    "character_development": {
      "file": "character_development_template.md",
      "duration": 300,
      "start_time": "00:01:46",
      "end_time": "00:06:45",
      "purpose": "Trace character evolution over time"
    },
    "thematic_analysis": {
      "file": "thematic_analysis_template.md",
      "duration": 240,
      "start_time": "00:06:46",
      "end_time": "00:10:45",
      "purpose": "Analyze deeper meanings and symbolism"
    },
    "relations_universe": {
      "file": "relations_universe_template.md",
      "duration": 180,
      "start_time": "00:10:46",
      "end_time": "00:13:45",
      "purpose": "Explore relationships and broader universe"
    },
    "adaptations": {
      "file": "adaptations_template.md",
      "duration": 120,
      "start_time": "00:13:46",
      "end_time": "00:15:45",
      "purpose": "Cover non-comics adaptations"
    },
    "theories_curiosities": {
      "file": "theories_curiosities_template.md",
      "duration": 120,
      "start_time": "00:15:46",
      "end_time": "00:17:45",
      "purpose": "Fan theories and interesting facts"
    },
    "conclusion": {
      "file": "conclusion_template.md",
      "duration": 90,
      "start_time": "00:17:46",
      "end_time": "00:19:15",
      "purpose": "Summarize and call to action"
    }
  },
  "research_requirements": {
    "minimum_data": {
      "character_name": true,
      "first_appearance": true,
      "creators": true,
      "basic_description": true
    },
    "recommended_data": {
      "key_issues": 5,
      "major_villains": 3,
      "allies": 2,
      "story_arcs": 2,
      "power_evolution": true
    },
    "complete_data": {
      "full_issue_history": true,
      "all_relationships": true,
      "adaptations_list": true,
      "cultural_impact": true
    }
  },
  "quality_thresholds": {
    "character_data_score": 60,
    "minimum_issues_for_analysis": 10,
    "minimum_years_active": 5,
    "required_creators": 1
  },
  "api_integration": {
    "comic_vine": {
      "base_url": "https://comicvine.gamespot.com/api",
      "rate_limit": "200 requests per 15 minutes",
      "required_delay": "1200ms",
      "api_key_required": true
    },
    "endpoints": {
      "character_search": "/search/",
      "character_details": "/character/4005-{id}/",
      "character_issues": "/issues/",
      "story_arcs": "/story_arcs/",
      "volumes": "/volumes/"
    }
  },
  "n8n_integration": {
    "workflow_1_modification": {
      "new_node": "Define Research Template",
      "position": "After character selection",
      "function": "Generate research checklist based on template",
      "output": "structured_research_plan.json"
    },
    "workflow_2_modification": {
      "new_node": "Generate Script Draft",
      "position": "After data collection",
      "input": "character_data.json + template",
      "output": "script_draft.md",
      "ai_refinement": "Send draft to Gemini for Alt Shift X styling"
    }
  },
  "variables_system": {
    "syntax": "{variable_name}",
    "required_variables": [
      "personagem",
      "nome_completo",
      "criador_principal",
      "co_criador",
      "primeira_aparicao",
      "editora_original",
      "poderes",
      "identidade_secreta"
    ],
    "optional_variables": [
      "arco_inimigo",
      "aliado_principal",
      "adaptacao_cinema",
      "teoria_principal",
      "legado_cultural"
    ],
    "conditional_content": {
      "if_adaptations_exist": "include adaptations section",
      "if_minor_character": "simplify character development",
      "if_modern_character": "reduce historical context"
    }
  },
  "style_guidelines": {
    "tone": "Conversational but informed",
    "style": "Alt Shift X analytical approach",
    "language": "English",
    "narration_voice": "Engaging, passionate, knowledgeable",
    "visual_cues": {
      "emphasis": "Use **bold** for key terms",
      "quotes": "Use italics for comic dialogue",
      "timestamps": "Strict [HH:MM:SS] format"
    }
  },
  "validation_rules": {
    "script_length": {
      "minimum": "18 minutes",
      "maximum": "30 minutes",
      "target": "22 minutes"
    },
    "content_requirements": {
      "must_include": ["sponsorship", "thesis", "call_to_action"],
      "should_include": ["specific_issue_references", "creator_credits"],
      "avoid": ["unsupported_claims", "generic_statements"]
    }
  },
  "output_formats": {
    "script": {
      "extension": ".md",
      "encoding": "UTF-8",
      "structure": "full_script_with_timestamps"
    },
    "research_plan": {
      "extension": ".json",
      "purpose": "Guide API data collection",
      "content": "checklist_and_api_queries"
    },
    "storyboard_ready": {
      "format": "JSON with scene breakdowns",
      "includes": ["timing", "visual_cues", "narration_text"]
    }
  },
  "maintenance": {
    "template_updates": "Review quarterly",
    "api_mapping": "Update when API changes",
    "quality_checks": "Validate with 3 test characters monthly",
    "version_control": "Track all template modifications"
  }
}